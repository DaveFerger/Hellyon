<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#00aeef">
    <TextView
        android:text="@string/Actions"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/actionsText" />
    <Button
        android:text="@string/NewPot"
        android:background="@drawable/blue_button"
        android:textColor="@android:color/white"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newPotButton" />
    <TextView
        android:text="@string/ActivePots"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activePotsText" />
    <Button
        android:text="@string/Pot1"
        android:background="@drawable/blue_button"
        android:textColor="@android:color/white"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pot1Button" />
    <Button
        android:text="@string/Pot2"
        android:background="@drawable/blue_button"
        android:textColor="@android:color/white"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pot2Button" />
    <Button
        android:text="@string/Pot3"
        android:background="@drawable/blue_button"
        android:textColor="@android:color/white"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pot3Button" />
    <Button
        android:text="@string/Pot4"
        android:background="@drawable/blue_button"
        android:textColor="@android:color/white"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pot4Button" />
</LinearLayout>